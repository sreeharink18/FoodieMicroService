@using WebMVC.Models.DTO.AuthDTOFolder
@model RegisterRequestDto
<form method="post">
    <div class="container border p-4">
        <div class="row text-center ">
            <h1>Register</h1>
        </div>
        <div class="row p-2">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Name" class="form-control" placeholder="Enter Name..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Enter Email..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Enter Password..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phonenumber..." />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="Role" class="form-control" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Selected Role</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <button type="submit" class="form-control btn-success" value="Submit">Register</button>
        </div>
    </div>

</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}