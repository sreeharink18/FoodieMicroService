@using WebMVC.Models.DTO.ProductDTOFolder
@model IEnumerable<ProductDto>

@if(Model.Count() > 0)
{
    <form>

        <div class="container row">
            @foreach (var item in Model)
            {
                <div class="col-4">
                    <div class="p-0 my-3 border rounded">
                        <div class="card">
                            <h3 class="card-title text-white-50 text-center py-2">@item.Name</h3>
                            <img src="https://placehold.co/600x400" class="card-img-top">
                            <div class="card-body">
                                <div class="d-flex justify-content-between py-2">
                                    <span class="text-danger" style="font-size:20px;">@item.Price.ToString("c")</span>
                                    <span class="badge bg-warning text-white p-2">@item.CategoryName</span>
                                </div>
                                <p class="card-text">@item.Description</p>
                                <div class="row">
                                    <div class="col">
                                        <a class="btn btn-success form-control" asp-controller="Home" asp-action="DetailProductPage" asp-route-productId="@item.ProductId">Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </form>

}
else
{
   <div>
       <h1>Not found</h1>
   </div>
}
